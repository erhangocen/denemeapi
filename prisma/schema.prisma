// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Post {
  id                 String    @id @default(cuid())
  title              String
  description        String   
  image              String
  categoryId         String
  category           Category @relation(fields: [categoryId], references: [id])

  @@unique([categoryId])
}

model Category {
  id                 String    @id @default(cuid())
  title              String
  posts              Post[]
}

